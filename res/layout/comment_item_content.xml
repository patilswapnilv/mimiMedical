<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingRight="12.0dip"
    android:orientation="horizontal"
    android:paddingBottom="8.0dip"
    android:paddingLeft="8.0dip" >

    <ImageView
        android:id="@+id/image_view_head"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_marginTop="8.0dip"
        android:src="@drawable/v5_0_1_widget_default_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:text="fffff评论评论评论评论评论评论评论评论评论"
            android:textColor="@color/v5_0_1_light_gray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_view_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/v5_0_1_newsfeed_popupwindow_type_status_icon" />

            <TextView
                android:id="@+id/text_view_time_content"
                style="@style/v5_0_1_newsfeed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/image_view_time_icon"
                android:text="昨天08:06" />

            <ImageView
                android:id="@+id/image_view_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/v5_0_1_action_button_unselected" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>