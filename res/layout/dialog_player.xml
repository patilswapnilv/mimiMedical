	    android:background="@drawable/btn_green" 
	    android:layout_width="120.0dip" 
	    android:layout_height="40.0dip" 
	    android:padding="0dip"
	    android:text="完成" 
	    android:layout_below="@id/tv_player_state_hint" 
	    android:layout_centerHorizontal="true" />
</RelativeLayout>
